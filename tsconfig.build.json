{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"skipLibCheck": true,
		"strict": false,
		"lib": ["ES2022", "DOM"],
		"moduleResolution": "node16",
		"module": "Node16",
		"noImplicitAny": false,
		"strictPropertyInitialization": false
	},
	"exclude": [
		"node_modules",
		"test",
		"dist",
		"**/*spec.ts",
		"vitest.config.ts",
		"vitest.e2e.config.ts"
	]
}
